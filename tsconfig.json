{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/models/*": ["models/*"],
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "types": ["vite/client", "web-bluetooth"]
  },

  "include": ["src/**/*.vue", "src/**/*.js", "models/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
