{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/models/*": ["../models/*"],
      "@/*": ["src/*"]
    },
    "outDir": "dist"
  },

  "include": ["src/**/*.js", "../models/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
